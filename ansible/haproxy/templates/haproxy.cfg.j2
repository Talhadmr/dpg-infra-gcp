global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # Default SSL material locations
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

    # TLS settings
    ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
    ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
    log     global
    mode    tcp
    option  tcplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

# =============================================================================
# HAProxy Stats Dashboard
# Accessible at http://<bastion-ip>:{{ haproxy_stats_port }}/stats
# =============================================================================
listen stats
    bind *:{{ haproxy_stats_port }}
    mode http
    stats enable
    stats uri /stats
    stats refresh 10s
    stats admin if LOCALHOST

# =============================================================================
# Kubernetes API Server (port 6443)
# Load balances to kube_control_plane nodes
# =============================================================================
frontend kubernetes_api
    bind *:{{ haproxy_api_port | default(6443) }}
    mode tcp
    option tcplog
    default_backend kubernetes_masters

backend kubernetes_masters
    mode tcp
    option tcp-check
    balance roundrobin
{% for host in groups['kube_control_plane'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:6443 check fall 3 rise 2
{% endfor %}

# =============================================================================
# HTTP Ingress (port 80 -> NodePort 30080)
# Load balances to kube_node workers for Ingress Controller
# =============================================================================
frontend http_ingress
    bind *:80
    mode tcp
    option tcplog
    default_backend ingress_http

backend ingress_http
    mode tcp
    option tcp-check
    balance roundrobin
{% for host in groups['kube_node'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:30080 check fall 3 rise 2
{% endfor %}

# =============================================================================
# HTTPS Ingress (port 443 -> NodePort 30443)
# Load balances to kube_node workers for Ingress Controller (TLS passthrough)
# =============================================================================
frontend https_ingress
    bind *:443
    mode tcp
    option tcplog
    default_backend ingress_https

backend ingress_https
    mode tcp
    option tcp-check
    balance roundrobin
{% for host in groups['kube_node'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:30443 check fall 3 rise 2
{% endfor %}
