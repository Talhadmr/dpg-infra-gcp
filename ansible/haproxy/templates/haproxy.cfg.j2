global
    log /dev/log local0
    log /dev/log local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

    # Default SSL material locations
    ca-base /etc/ssl/certs
    crt-base /etc/ssl/private

    # TLS settings
    ssl-default-bind-ciphersuites TLS_AES_128_GCM_SHA256:TLS_AES_256_GCM_SHA384:TLS_CHACHA20_POLY1305_SHA256
    ssl-default-bind-options ssl-min-ver TLSv1.2 no-tls-tickets

defaults
    log     global
    mode    tcp
    option  tcplog
    option  dontlognull
    timeout connect 5000
    timeout client  50000
    timeout server  50000

# HAProxy Stats (optional, accessible at http://bastion:8404/stats)
listen stats
    bind *:{{ haproxy_stats_port }}
    mode http
    stats enable
    stats uri /stats
    stats refresh 10s
    stats admin if LOCALHOST

# Kubernetes API Server Frontend
frontend kubernetes_api
    bind *:{{ haproxy_frontend_port }}
    mode tcp
    option tcplog
    default_backend kubernetes_masters

# Kubernetes Masters Backend
backend kubernetes_masters
    mode tcp
    option tcp-check
    balance roundrobin
{% for host in groups['kube_control_plane'] %}
    server {{ host }} {{ hostvars[host]['ansible_host'] }}:{{ haproxy_backend_port }} check fall 3 rise 2
{% endfor %}

